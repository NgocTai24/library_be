{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Thêm các cấu hình cho decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@config": ["config/index"],
      "@models/*": ["models/*"],
      "@models": ["models/index"],
      "@socket/*": ["socket/*"],
      "@socket": ["socket/index"],
      "@controller/*": ["controller/*"],
      "@controller": ["controller/index"],
      "@middleware/*": ["middleware/*"],
      "@middleware": ["middleware/index"],
      "@router/*": ["router/*"],
      "@router": ["router/index"],
      "@helper/*": ["helper/*"],
      "@helper": ["helper/index"],
      "@validation/*": ["validation/*"],
      "@validation": ["validation/index"],
      "@service/*": ["service/*"],
      "@service": ["service/index"],
      "@api-doc/*": ["api-doc/*"],
      "@api-doc": ["api-doc/index"],
      "@interface/*": ["interface/*"],
      "@interface": ["interface/index"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}