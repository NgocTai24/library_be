{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Thêm các cấu hình cho decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@config": ["config/index"],
      "@models/*": ["models/*"],
      "@models": ["models/index"],
      "@socket/*": ["socket/*"],
      "@socket": ["socket/index"],
      "@controllers/*": ["controllers/*"],
      "@controllers": ["controllers/index"],
      "@middlewares/*": ["middlewares/*"],
      "@middlewares": ["middlewares/index"],
      "@routes/*": ["routes/*"], // Thêm alias @routes
      "@routes": ["routes/index"],
      "@helper/*": ["helper/*"],
      "@helper": ["helper/index"],
      "@validator/*": ["validator/*"],
      "@validator": ["validator/index"],
      "@service/*": ["service/*"],
      "@service": ["service/index"],

    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}